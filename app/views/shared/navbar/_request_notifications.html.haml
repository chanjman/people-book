.ui.floating.pointing.top.right.dropdown.item

  // Notifications bell icon and label
  %div{ class: class_string('right pointing ui label',
    'red' => @friend_requests.exists?) }= @friend_requests.size
  %i.users.icon

  // Notifications dropdown
  .menu
    - if @friend_requests.any?
      - @friend_requests.each do |request|
        .item
          .request.content
            .description
              .ui.avatar.image
                = image_tag request.user.profile.avatar.url :thumb
              %span.ui.small.header
                = link_to request.user.name, user_path(request.user)
              %span.text requested to be your friend
            %span.request.buttons
              // Approve button
              = link_to 'Approve',
                user_friendship_path(request.user.id, request.id),
                method: 'patch',
                class: 'ui mini positive request button'
              // Decline button
              = link_to 'Decline',
                user_friendship_path(request.user.id, request.id),
                method: 'delete',
                class: 'ui mini negative request button'
    - else
      .item
        %span No new friend requests. Make some new friends?
