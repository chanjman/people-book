- message = (notification.notifiable.author == current_user ? 'your comment' : "#{notification.notifiable.author.name}'s comment")

.item
  = link_to send("#{notification.notifiable.commentable_type.underscore.downcase}_path", notification.notifiable.commentable),
    class: 'content' do

    = render partial: 'notifications/shared/notification_body',
      locals: { notification: notification,
      message: message }
