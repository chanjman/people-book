= render 'menu'

.row
  .sixteen.wide.column
    - if !@resources.blank?
      .ui.left.aligned.stackable.grid
        - @resources.each do |resource|
          .eight.wide.column
            .ui.segment
              .ui.divided.link.items
                = link_to url_for(resource.commentable), class: 'item' do
                  .ui.tiny.image
                    = image_tag resource.commentable.author.avatar.url(:thumb)
                  .content
                    .header= resource.author_name
                    .description= resource.text.truncate(130) || ''
    - else
      .ui.blue.message
        %h3.header No comments

.row
  - unless @resources.blank?
    = paginate @resources
