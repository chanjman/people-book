.ui.card

  .image
    = image_tag user.profile.avatar.url

  .content
    = link_to user.name, user_path(user), class: 'header'

    .meta
      %span.date
        Joined
        = time_ago_in_words user.created_at
        ago
  -#
    .description
      = "I am a #{user.profile.profession.downcase} from #{user.profile.hometown}, #{user.profile.age} years old, currently #{user.profile.relationship_status.downcase}"
-#
  .extra.content

    %a
      %i.user.icon
      %span.friends_count
        = pluralize user.friends_count, 'friend'

    - if current_user != user
      %span.right.floated.friendship
        = render 'friend_requests/form', user: user
