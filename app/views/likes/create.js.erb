<%= render partial: 'shared/flash_js' %>

var likeCount = "<%= pluralize @likeable.reload.likes_count, 'like' %>"
var action = "<%= j render partial: 'likes/unlike', locals: { likeable: @likeable.reload } %>'"

PeopleBook.LikesModule.renderLikes('<%= @likeable.id %>',
                                   '<%= @likeable.class %>',
                                   likeCount,
                                   action);
